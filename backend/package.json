{
  "name": "mychat",
  "version": "1.0.0",
  "description": "Serveur NodeJS de l'application \"My Chat\"",
  "main": "server.js",
  "scripts": {
    "build": "tsc --outDir dist -w",
    "watch": "concurrently -k -n \"Node,TypeScript\" -p \"[{name}]\" -c \"blue,red\" \"npm:watch-node\" \"npm:watch-ts\"",
    "watch-node": " cross-env NODE_ENV=dev nodemon ./dist/server.js",
    "watch-ts": "tsc -w",
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage"
  },
  "author": "Evens Pompe",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.14",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.16",
    "sequelize": "^6.3.5",
    "socket.io": "^2.3.0",
    "ts-token-generator": "^1.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.1",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mailgen": "^2.0.3",
    "@types/node": "^14.11.2",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/sequelize": "^4.28.9",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "faker": "^5.1.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  }
}
